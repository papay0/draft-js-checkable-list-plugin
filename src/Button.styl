.checkable-list-item-button
  width 16px
  height 16px
  display inline-block
  text-align center
  border-radius 3px
  cursor pointer
  opacity .4
  &.active
    opacity 1
  &__inner
    width 16px
    height 16px
    display inline-block
    text-align center
    border-radius 3px
  &__body
    display inline-block
    width 100%
    height 100%
    vertical-align middle
    line-height 1
    & > *
      max-width 100%
      height auto
